{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dpc-messenger",
  "version": "0.12.0",
  "identifier": "com.mike.dpc-messenger",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "dpc-messenger",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "maximizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:* ws://localhost:* https://fonts.googleapis.com https://fonts.gstatic.com; media-src 'self' mediastream: blob: https://asset.localhost asset:;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/.dpc/**"
        ]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capability with microphone access",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:allow-close",
            "core:window:allow-maximize",
            "core:window:allow-minimize",
            "core:window:allow-toggle-maximize",
            "core:webview:allow-webview-position",
            "core:webview:allow-webview-size",
            "core:webview:allow-internal-toggle-devtools",
            "dialog:allow-message",
            "notification:allow-is-permission-granted",
            "notification:allow-request-permission",
            "notification:allow-show"
          ],
          "platforms": ["linux", "macOS", "windows"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
