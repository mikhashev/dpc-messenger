# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:1420,tauri://localhost,http://localhost:3000

# Application
APP_NAME=D-PC Federation Hub
APP_VERSION=1.0.0
DEBUG=false

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# WebSocket
WEBSOCKET_MAX_CONNECTIONS=10000

DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/dpc_hub"

# Secret key for signing JWT. Generate a random string.
# You can use: openssl rand -hex 32
SECRET_KEY="$(openssl rand -hex 32)"

# Google OAuth credentials (required)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# GitHub OAuth credentials (optional)
# To enable GitHub authentication, create an OAuth App at:
# https://github.com/settings/developers
# Set Authorization callback URL to: http://localhost:8000/auth/github/callback
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Geographic Restrictions (STRONGLY RECOMMENDED FOR LEGAL COMPLIANCE)
# Enable IP-based geographic blocking to comply with legal restrictions
ENABLE_GEO_BLOCKING=true

# Blocked country codes (ISO 3166-1 alpha-2 format, comma-separated)
# RU=Russia, BY=Belarus, CN=China, IR=Iran, KP=North Korea, SY=Syria
# See docs/GEOGRAPHIC_RESTRICTIONS.md for complete list
BLOCKED_COUNTRIES=RU,BY

# GeoIP Database Path (MaxMind GeoLite2-Country database)
# Download from: https://dev.maxmind.com/geoip/geolite2-free-geolocation-data
# Install geoip2 library: pip install geoip2
GEOIP_DATABASE_PATH=/path/to/GeoLite2-Country.mmdb

# Log blocked access attempts for compliance documentation
LOG_GEO_BLOCKS=true